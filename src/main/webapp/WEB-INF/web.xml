<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <!-- Here we're defining list of application servlets -->
    <servlet>
        <servlet-name>hello_world</servlet-name>
        <servlet-class>com.example.HelloWorldServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>hello_jsp</servlet-name>
        <servlet-class>com.example.JspServlet</servlet-class>
    </servlet>

    <!-- Here we're defining URL mapping to each previously defined servlets -->
    <servlet-mapping>
        <servlet-name>hello_world</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>hello_world</servlet-name>
        <url-pattern>/hello_world</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>hello_jsp</servlet-name>
        <url-pattern>/hello_jsp</url-pattern>
    </servlet-mapping>

</web-app>